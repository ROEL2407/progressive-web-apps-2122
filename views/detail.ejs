<html lang="nl">
  <%- include('./components/head.ejs') -%>
  <body>
    <header>
        <a href="/" id="back"><</a>
        <a href="/" id="refresh">
            <h1>Rijksmuseum</h1>
        </a>
        <button id="search_btn" aria-label="Zoeken openen">
